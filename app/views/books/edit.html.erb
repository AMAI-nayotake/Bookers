<h1>Editing Book</h1>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

  <div class="field">
   <%= f.label :title %><br>
   <%= f.text_field :title %>
  </div>

  <div class="field">
   <%= f.label :body %><br>
   <%= f.text_area :body %>
  </div>
  
  <div class="actions">
   <%= f.submit 'Updata Book' %>
  </div>

 <%= link_to 'Show', book_path %> |
 <%= link_to 'Back', books_path %>

<% end %>
